# Database
DATABASE_URL="postgresql://username:password@localhost:5432/traffic_violation_db"

# JWT
JWT_SECRET="your-super-secret-jwt-key-here"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-here"
JWT_EXPIRES_IN="1h"
JWT_REFRESH_EXPIRES_IN="7d"

# Firebase
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_PRIVATE_KEY="your-private-key"
FIREBASE_CLIENT_EMAIL="your-client-email"

# Twilio (SMS)
TWILIO_ACCOUNT_SID="your-account-sid"
TWILIO_AUTH_TOKEN="your-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# Server
PORT=3000
NODE_ENV=development

# CORS
# Use specific origins (no wildcard) when credentials are enabled
CORS_ORIGIN="http://localhost:5173,http://localhost:3001"

# Prototype flag to allow unauthenticated police and upload routes
# PROTOTYPE_NO_AUTH=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
